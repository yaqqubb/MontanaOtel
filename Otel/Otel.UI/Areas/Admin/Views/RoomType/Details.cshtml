@model Otel.DAL.DataContext.Entities.RoomType

<div class="container mt-4">
    <h2>Room Type Details</h2>

    <div class="mb-3">
        <h4>Name:</h4>
        <p>@Model.Name</p>
    </div>

    <div class="mb-3">
        <h4>Description:</h4>
        <p>@Model.Description</p>
    </div>

    <div class="mb-3">
        <h4>Price:</h4>
        <p>@Model.Price.ToString("C")</p> <!-- Para birimi formatında gösterir -->
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>