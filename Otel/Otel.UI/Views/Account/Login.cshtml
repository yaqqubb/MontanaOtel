@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="wrapper">
        <form asp-action="Login" method="post">
            <h1>Login</h1>

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="input-box">
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <i class='bx bxs-user'></i>
            </div>

            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <i class='bx bxs-lock-alt'></i>
            </div>

            <div class="remember-forgot">
                <label><input asp-for="RememberMe"> Remember Me</label>
                <a asp-controller="Account"asp-action="ForgotPassword">Forgot Password</a>
            </div>

            <button type="submit" class="btn">Login</button>

            <div class="register-link">
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a></p>
            </div>
            <div class="register-link">
                <p>Forgot Password <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a></p>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>