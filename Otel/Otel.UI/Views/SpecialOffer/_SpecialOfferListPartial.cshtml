@model IEnumerable<Otel.DAL.DataContext.Entities.SpecialOffer>

@{
    int offerCount = ViewBag.Skip != null ? (int)ViewBag.Skip + 1 : 1;
}

@foreach (var offer in Model)
{
    <div class="col-lg-6 col-sm-12 mb-4">
        <div class="department_main_box">
            <div class="offer_thumb mb-3">
                <img src="@(string.IsNullOrEmpty(offer.ImagePath)
                             ? Url.Content("~/images/default-offer.jpg")
                             : Url.Content(offer.ImagePath))"
                     alt="@offer.Name"
                     class="img-fluid rounded"
                     style="max-height: 220px; object-fit: cover; width: 100%;" />
            </div>

            <div class="department_info">
                <div class="number_text">@offerCount.ToString("00")</div>
                <h3 class="care_text">@offer.Name</h3>
                <p class="department_description">@offer.Description</p>
                <p class="department_description">
                    <strong>Price:</strong> $@offer.TotalAmount
                </p>
                <p class="department_description">
                    <strong>Valid until:</strong> @offer.ValidityDate.ToString("MMMM dd, yyyy")
                </p>
            </div>
        </div>
    </div>
    offerCount++;
}
